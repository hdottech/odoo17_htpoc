<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 定義權限分類 -->
    <record id="module_category_approval" model="ir.module.category">
        <field name="name">審批管理</field>
        <field name="description">審批系統權限</field>
        <field name="sequence">20</field>
    </record>

    <!-- 主管群組 -->
    <record id="group_approval_manager" model="res.groups">
        <field name="name">審批主管</field>
        <field name="category_id" ref="module_category_approval"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">可以審核和管理審批申請</field>
    </record>

    <!-- 管理員群組 -->
    <record id="group_approval_admin" model="res.groups">
        <field name="name">審批管理員</field>
        <field name="category_id" ref="module_category_approval"/>
        <field name="implied_ids" eval="[(4, ref('group_approval_manager'))]"/>
        <field name="comment">可以查看和管理所有審批</field>
    </record>
</odoo>